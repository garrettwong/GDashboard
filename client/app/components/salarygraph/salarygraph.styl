@import '../../common/common'

salarygraph {
  .heading {

    .title {
      color: #73879c;
      display: inline-block;
    }

    .dropdown-menu {
      padding: 0px;

      li.title {
        padding: 5px;
      }
    }

    .dropdown.open {
      .dropdown-menu {
        z-index: 0px;
      }
    }
  
    .dropdown-toggle {
      padding-top: 5px;
      padding-bottom: 5px;
    }

    .row {
      margin-bottom: 0px;
      
      [class*="col-"] {
        margin-bottom:0px;
        padding: 5px;
      }

    }

    .margin-left  {
      margin-left: 8px;
    }
  }


}